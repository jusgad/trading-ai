# Trading AI Environment Variables
# Copy this file to .env and configure your settings

# Database Configuration
DATABASE_URL=sqlite:///data/trading_ai.db

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/trading_ai.log

# Risk Management Settings
MAX_RISK_PER_TRADE=0.02
STOP_LOSS_MULTIPLIER=2.0
TAKE_PROFIT_MULTIPLIER=3.0
CONFIDENCE_THRESHOLD=0.7

# Model Training Settings
LEARNING_RATE=0.001
BATCH_SIZE=32
EPOCHS=100
LOOKBACK_PERIOD=100

# Market Data Settings
DATA_INTERVAL=1h
DEFAULT_SYMBOLS=AAPL,GOOGL,MSFT,TSLA,BTC-USD,ETH-USD

# Backtesting Settings
INITIAL_CAPITAL=100000.0
COMMISSION=0.001

# Dashboard Settings
DASHBOARD_HOST=localhost
DASHBOARD_PORT=8501
AUTO_REFRESH_INTERVAL=30

# Alert Settings (Optional - for future implementation)
EMAIL_ALERTS_ENABLED=false
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

# Telegram Alerts (Optional - for future implementation)
TELEGRAM_BOT_TOKEN=your_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# API Keys (if using premium data sources in the future)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key
POLYGON_API_KEY=your_polygon_key
QUANDL_API_KEY=your_quandl_key